<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="552.0" prefWidth="821.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.todoapp.TodoController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Load" />
                  <MenuItem mnemonicParsing="false" text="Save" />
                  <MenuItem mnemonicParsing="false" text="Save as" />
                  <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox spacing="25.0">
         <children>
            <Button mnemonicParsing="false" onAction="#addNewList" text="New List" />
            <Button mnemonicParsing="false" onAction="#editListTitle" text="Edit List Title" />
            <Button mnemonicParsing="false" onAction="#removeList" text="Delete List" />
            <TextField fx:id="textField" />
         </children>
      </HBox>
      <HBox prefHeight="493.0" prefWidth="781.0">
         <children>
            <ListView fx:id="toDoListListView" prefHeight="422.0" prefWidth="163.0" />
            <ListView fx:id="taskList" prefHeight="422.0" prefWidth="311.0" />
            <Button mnemonicParsing="false" onAction="#createTask" text="Add Task" />
            <Button mnemonicParsing="false" onAction="#removeTask" text="Remove Task" />
         </children></HBox>
   </children>
</VBox>
